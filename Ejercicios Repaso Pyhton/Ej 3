def clasificar_numeros(lista_numeros):
    pares = []
    impares = []
    negativos = []

    for numero in lista_numeros:
        if numero < 0:
            negativos.append(numero)
        if numero % 2 == 0:  ## con esto hacemos que Si el resto al dividir por 2 es 0, el nÃºmero es par
            pares.append(numero)
        else:
            impares.append(numero)

    return pares, impares, negativos


# Ejemplo:
p, i, n = clasificar_numeros([4, -3, 0, -2, 7])

print("Pares:", p)
print("Impares:", i)
print("Negativos:", n)
