def inventario_personajes(dic_personajes):
    humanos = []
    criaturas = []

    # Separamos en dos listas

    for nombre in dic_personajes:
        if dic_personajes[nombre] == "humano":
            humanos.append(nombre)
        else:
            criaturas.append(nombre)

    # Ordenar humanos alfabéticamente

    humanos_ordenados = sorted(humanos)

    # Ordenar criaturas por tamaño del nombre
    
    criaturas_ordenadas = sorted(criaturas, key=len)

    return humanos_ordenados, criaturas_ordenadas


# Ejemplo:
personajes = {"Aria": "humano", "Zorg": "criatura", "Miguel": "humano", "BabaYaga": "criatura"}
h, c = inventario_personajes(personajes)
print("Humanos:", h)
print("Criaturas:", c)
